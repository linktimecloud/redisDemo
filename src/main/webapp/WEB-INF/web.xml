<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <listener>
    <listener-class>cloud.linktime.demo.listener.WordStreamListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>Word Count Service</servlet-name>
    <servlet-class>cloud.linktime.demo.servlet.WordServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Word Count Service</servlet-name>
    <url-pattern>/data/view</url-pattern>
  </servlet-mapping>


</web-app>